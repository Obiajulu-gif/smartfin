# MongoDB Connection
# Replace with your MongoDB connection string
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/smartfin

# Firebase Configuration
# Get these values from your Firebase project settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# SmartFin AI API
# API endpoint for the financial assistant
NEXT_PUBLIC_API_URL=https://smartfin-ai-api.onrender.com

# Sample User ID for guest mode (optional)
# This allows demo functionality without login
SAMPLE_USER_ID=guest-user-id-for-demo

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_min_32_chars

# Deployment Environment
# development, production, or test
NODE_ENV=development 